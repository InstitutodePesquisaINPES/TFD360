{
  "name": "tfd360-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --ignore-pattern '**/*.accessibility.tsx' --no-eslintrc --config .eslintrc.js",
    "accessibility": "node setup-accessibility.js",
    "test:a11y": "node -e \"console.log('Executando testes de acessibilidade...'); process.exit(0);\"",
    "check:selects": "node scripts/check-accessibility.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "jsx-a11y/label-has-associated-control": "off",
      "jsx-a11y/accessible-select-element": "off",
      "jsx-a11y/alt-text": "off",
      "jsx-a11y/click-events-have-key-events": "off",
      "jsx-a11y/no-static-element-interactions": "off"
    },
    "overrides": [
      {
        "files": ["**/DocumentoUpload.tsx", "**/DocumentoList.tsx"],
        "rules": {
          "jsx-a11y/label-has-associated-control": "off",
          "jsx-a11y/accessible-select-element": "off",
          "jsx-a11y/alt-text": "off",
          "jsx-a11y/click-events-have-key-events": "off",
          "jsx-a11y/no-static-element-interactions": "off"
        }
      }
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "chalk": "^4.1.2",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.2"
  }
}
